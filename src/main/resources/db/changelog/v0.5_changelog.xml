<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.8.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1657467245450-1" author="ekaya">
        <createTable tableName="asset_user_history">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_asset_user_history"/>
            </column>
            <column name="application_user_id" type="UUID"/>
            <column name="asset_id" type="UUID"/>
            <column name="lend_status" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="rend_date" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="return_date" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="1657467245450-2" author="ekaya">
        <createTable tableName="storage">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_storage"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="1657467245450-3" author="ekaya">
        <createTable tableName="storage_assets">
            <column name="storage_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="assets_id" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1657467245450-4" author="ekaya">
        <addColumn tableName="asset_inquiry">
            <column name="asset_category" type="VARCHAR(255)"/>
            <column name="asset_name" type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>
    <changeSet id="1657467245450-6" author="ekaya">
        <addUniqueConstraint columnNames="assets_id" constraintName="uc_storage_assets_assets"
                             tableName="storage_assets"/>
    </changeSet>
    <changeSet id="1657467245450-7" author="ekaya">
        <addForeignKeyConstraint baseColumnNames="application_user_id" baseTableName="asset_user_history"
                                 constraintName="FK_ASSET_USER_HISTORY_ON_APPLICATIONUSER" referencedColumnNames="id"
                                 referencedTableName="application_user"/>
    </changeSet>
    <changeSet id="1657467245450-8" author="ekaya">
        <addForeignKeyConstraint baseColumnNames="asset_id" baseTableName="asset_user_history"
                                 constraintName="FK_ASSET_USER_HISTORY_ON_ASSET" referencedColumnNames="id"
                                 referencedTableName="asset"/>
    </changeSet>
    <changeSet id="1657467245450-9" author="ekaya">
        <addForeignKeyConstraint baseColumnNames="assets_id" baseTableName="storage_assets"
                                 constraintName="fk_stoass_on_asset" referencedColumnNames="id"
                                 referencedTableName="asset"/>
    </changeSet>
    <changeSet id="1657467245450-10" author="ekaya">
        <addForeignKeyConstraint baseColumnNames="storage_id" baseTableName="storage_assets"
                                 constraintName="fk_stoass_on_storage" referencedColumnNames="id"
                                 referencedTableName="storage"/>
    </changeSet>
    <changeSet id="1657467245450-11" author="ekaya">
        <dropForeignKeyConstraint baseTableName="application_user_assets"
                                  constraintName="fk_appuseass_on_application_user"/>
    </changeSet>
    <changeSet id="1657467245450-12" author="ekaya">
        <dropForeignKeyConstraint baseTableName="application_user_assets" constraintName="fk_appuseass_on_asset"/>
    </changeSet>
    <changeSet id="1657467245450-13" author="ekaya">
        <dropForeignKeyConstraint baseTableName="asset_inquiry" constraintName="fk_asset_inquiry_on_asset"/>
    </changeSet>
    <changeSet id="1657467245450-15" author="ekaya">
        <dropTable cascadeConstraints="true" tableName="application_user_assets"/>
    </changeSet>
    <changeSet id="1657467245450-16" author="ekaya">
        <dropColumn columnName="asset_id" tableName="asset_inquiry"/>
    </changeSet>

</databaseChangeLog>